<footer id="popular" class="column center-block">
  <h1>MOST POPULAR</h1>
  <div class="row center-block">
    <% Post.order(views: :desc)[0...4].each_with_index do |post, i| %>
      <div class="popular col-lg-3 <%= @accent_colors[i] %>">
        <%= link_to post do %>
          <%= render html: sanitize(post.summary) %>
        <% end %>
      </div>
    <% end %>
  </div>
</footer>
